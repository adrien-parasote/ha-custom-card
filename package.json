{
  "version": "1.0",
  "description": "HA custom dashboard",
  "main": "src/dashboard-card.js",
  "type": "module",
  "scripts": {
    "format": "prettier src/*.js src/**/*.js src/**/**/*.js --write",
    "serve": "es-dev-server --node-resolve --watch",
    "copy": "mkdir temp && cp -r ./src/* ./temp",
    "prepare-prod": "npm run copy && rm ./temp/const.js && mv ./temp/const.js.PROD ./temp/const.js",
    "clean-up": "rm -rf temp && mv sci-fi.min.js dist",
    "build": "npm run prepare-prod && rollup -c && npm run clean-up"
  },
  "keywords": [],
  "dependencies": {
    "@mdi/js": "7.4.47",
    "lit": "3.2.1"
  },
  "devDependencies": {
    "@rollup/plugin-json": "6.1.0",
    "@rollup/plugin-node-resolve": "15.3.0",
    "@rollup/plugin-replace": "6.0.1",
    "@rollup/plugin-terser": "0.4.4",
    "es-dev-server": "1.55.1",
    "prettier": "3.3.3",
    "rollup": "2.79.2",
    "rollup-plugin-minify-html-literals": "1.2.6"
  }
}
